<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundhome"
    android:orientation="vertical"
    tools:context="com.example.asd.com.healthcare.EditDoctor">
    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollViewIdAddprofile"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="@dimen/activity_horizontal_margin"
            android:orientation="vertical"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                >
                <TextView
                    android:layout_width="115dp"
                    android:layout_height="wrap_content"
                    android:text="  Name :"
                    android:textColor="@color/inputfiledtextcolor"
                    android:gravity="left"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/etName"
                    android:inputType="text"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                >
                <TextView
                    android:layout_width="115dp"
                    android:layout_height="wrap_content"
                    android:text="  Department :"
                    android:textColor="@color/inputfiledtextcolor"
                    android:gravity="left"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/etdprt"
                    android:inputType="text"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                >
                <TextView
                    android:layout_width="115dp"
                    android:layout_height="wrap_content"
                    android:text="  Number:"
                    android:textColor="@color/inputfiledtextcolor"
                    android:gravity="left"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/etNumber"
                    android:inputType="text"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"

                >
                <TextView
                    android:layout_width="115dp"
                    android:layout_height="wrap_content"
                    android:text="  Email :"
                    android:textColor="@color/inputfiledtextcolor"
                    android:gravity="left"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/etEmail"
                    android:inputType="text"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"

                >
                <TextView
                    android:layout_width="115dp"
                    android:layout_height="wrap_content"
                    android:text="  Address :"
                    android:textColor="@color/inputfiledtextcolor"
                    android:gravity="left"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/etAddress"
                    android:inputType="text"
                    />
            </LinearLayout>



            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ff760d"
                android:paddingBottom="11dp"
                android:paddingTop="11dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Save Doctor"
                android:onClick="saveDoctor"
                android:textColor="@color/buttontextcolor"
                android:gravity="center"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:id="@+id/btCreatProfile"
                />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
