<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="110dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingLeft="3dp"
    android:paddingRight="3dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <TextView
            android:layout_width="18dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="1"
            android:textStyle="italic"
            android:textSize="22sp"
            android:id="@+id/count"
            />
        <ImageButton
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/propic"
            android:background="@drawable/tranfarent_hr"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:id="@+id/viewDetails"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="33dp"
                    android:layout_weight="1"
                    android:id="@+id/imgDietRemainder"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="33dp"
                    android:paddingTop="7dp"
                    android:textColor="#ec384d"
                    android:textSize="17sp"
                    android:text="Breakfast"
                    android:background="@drawable/tranfarent_hr"
                    android:gravity="center"
                    android:id="@+id/tDietztype"
                    android:layout_weight="4"
                    />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="33dp"
                    android:layout_weight="1"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="23dp"
                android:paddingBottom="4dp"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:text="Rise,Vagitable"
                android:background="@drawable/tranfarent_hr"
                android:gravity="center"
                android:id="@+id/tDirtMenu"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="23dp"
                android:paddingBottom="4dp"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:text="10/05/2016 10:20 AM"
                android:background="@drawable/tranfarent_hr"
                android:gravity="center"
                android:id="@+id/tDietTime"
                />
        </LinearLayout>
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="55dp"
            android:padding="5dp"
            android:background="@drawable/editing"
            android:id="@+id/tdietEdit"/>

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="@drawable/delete1"
            android:id="@+id/tDietDelete"
            />

    </LinearLayout>

</LinearLayout>