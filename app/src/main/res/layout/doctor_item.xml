<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingLeft="3dp"
    android:paddingRight="3dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <TextView
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="1"
            android:textStyle="italic"
            android:textSize="22sp"
            android:id="@+id/count"
            />
        <ImageButton
            android:layout_width="90dp"
            android:layout_height="67dp"
            android:id="@+id/propic"
            android:background="@drawable/tranfarent_hr"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:id="@+id/viewDetails"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:paddingTop="9dp"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:text="Assaduzzaman Noor"
                android:background="@drawable/tranfarent_hr"
                android:gravity="left"
                android:id="@+id/etDoctorName"

                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:orientation="horizontal"
                >
                <ImageButton
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:background="@drawable/call1"
                    android:id="@+id/makeCall"
                    android:gravity="center"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:textColor="@color/black"
                    android:paddingLeft="5dp"
                    android:textSize="15sp"
                    android:text="Myself"
                    android:background="@drawable/tranfarent_hr"
                    android:gravity="left"
                    android:id="@+id/etDoctorNumber"
                    />


            </LinearLayout>

        </LinearLayout>
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="55dp"
            android:padding="5dp"
            android:background="@drawable/editing"
            android:id="@+id/doctorEdit"/>

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="55dp"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="@drawable/delete"
            android:id="@+id/doctorDelete"
            />

    </LinearLayout>


</LinearLayout>