<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backbody1"
    android:orientation="vertical"
    tools:context="com.example.asd.com.healthcare.CreateAdminProfileActivity">
    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollViewIdAddprofile"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="@dimen/activity_horizontal_margin"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:id="@+id/viewGroup"
                >
                <TextView
                    android:layout_width="115dp"
                    android:layout_height="wrap_content"
                    android:text="  Name :"
                    android:textColor="@color/inputfiledtextcolor"
                    android:gravity="left"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/etName"
                    android:inputType="text"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                >
                <TextView
                    android:layout_width="115dp"
                    android:layout_height="wrap_content"
                    android:text="  Birth Date :"
                    android:textColor="@color/inputfiledtextcolor"
                    android:gravity="left"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:id="@+id/btBirthday"
                    android:paddingLeft="10dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Set Date"
                    android:paddingTop="14dp"
                    android:gravity="left"
                    android:onClick="setDate"

                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white"
                android:paddingBottom="11dp"
                android:paddingTop="11dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                >
                <TextView
                    android:layout_width="115dp"
                    android:layout_height="wrap_content"
                    android:text="  Gender :"
                    android:textColor="@color/inputfiledtextcolor"
                    android:gravity="left"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    />
                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Male"
                        android:paddingRight="20dp"
                        android:id="@+id/maleRbutton"
                        android:onClick="ganderRbutton"
                        />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Female"
                        android:id="@+id/femaleRbutton"
                        android:onClick="ganderRbutton"
                        />


                </RadioGroup>




            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white"
                android:paddingBottom="7dp"
                android:paddingTop="7dp"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                >

                <TextView
                    android:layout_width="115dp"
                    android:layout_height="wrap_content"
                    android:text=" Blood Group :"
                    android:textColor="@color/inputfiledtextcolor"
                    android:gravity="left"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    />

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/spinnerBloodgroup"
                    android:background="@color/white"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:prompt="@string/blood_spinner_title"
                    />
            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"

                >
                <TextView
                    android:layout_width="115dp"
                    android:layout_height="wrap_content"
                    android:text=" Hieght :"
                    android:textColor="@color/inputfiledtextcolor"
                    android:gravity="left"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    />
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/etHieghtFt"
                    android:inputType="number"
                    android:layout_weight="1"
                    />
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:text="Ft"
                    />
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/etHieghtIn"
                    android:inputType="number"
                    android:layout_weight="1"
                    />
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:text="In"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"

                >
                <TextView
                    android:layout_width="115dp"
                    android:layout_height="wrap_content"
                    android:text=" Weight :"
                    android:textColor="@color/inputfiledtextcolor"
                    android:gravity="left"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/etweight"
                    android:inputType="numberDecimal"
                    />
            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/button"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Create Profile"
                android:onClick="createProfile"
                android:textColor="@color/buttontextcolor"
                android:gravity="center"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:id="@+id/btCreatProfile"
                />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
